{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>{{ 'season'|trans }}</h1>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('season_new') }}">{{ 'create.season'|trans }}</a>
    {%endif%}

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'year'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
                <th>{{ 'number'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>{{ season.number }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('season_show', {'id': season.id}) }}">{{ 'show'|trans }}</a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-primary" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>
                    {%endif%}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('season_new') }}">{{ 'create.season'|trans }}</a>
    {%endif%}

{% endblock %}
