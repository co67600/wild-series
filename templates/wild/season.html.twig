{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">

            <h1 class="mt-0">{{ program.title }}</h1>
            <h2 class="mt-0">{{ program.category.name }}</h2>

        </div>
    </div>

    {% for episode in episodes %}
        <a href="{{ path('wild_episode', { 'id' : episode.id } ) }}">
        <h4>Episode {{ episode.number }} : {{ episode.title }}</h4>
        </a>
        <p>{{ episode.synopsis }}</p>
    {% endfor %}






