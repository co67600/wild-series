{% extends 'base.html.twig' %}
{% block title %}{{ category }}{% endblock %}

{% block body %}
<div>
    <h1>Liste des 3 dernières séries de la catégorie {{ category }}</h1>
    {% for program in programs %}
        <a href="{{ path('wild_show',{"slug" : program.title | lower | replace({" " : "-"})}) }}">
    <h2>Série : {{ program.title }} </h2>
        </a>
    <p> {{ program.summary }}</p>
    {% endfor %}
</div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}