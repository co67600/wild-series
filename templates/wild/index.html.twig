{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>{{ 'available.series'|trans }}</h1>
    <div class="row">
        {% for program in programs %}
            <div class="col-md-3">
                <div id="accordion">
                    <div class="">
                        <div class="embed-responsive embed-responsive-1by1">
                            <a href="{{ path('wild_show',{"slug" : program.slug | lower | replace({" " : "-"})}) }}">
                                <img class="card-img-top embed-responsive-item" src="{{ asset('uploads/'~program.poster) }}" alt="{{ program.title }}">
                            </a>
                        </div>
                        <div class="card-header text-center" id="headingOne">
                            <h3>{{ 'category'|trans }} {{ program.category.name }}</h3>
                            <h2 class="">{{ program.title }}</h2>
                            <a href="#collapseOne" data-toggle="collapse" >{{ 'resume.series'|trans }}</a>
                        </div>

                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <p>{{ program.summary }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        {% else %}
            {{ 'no.series'|trans }}

        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        {{ 'back.home'|trans }}
    </a>
{% endblock %}


