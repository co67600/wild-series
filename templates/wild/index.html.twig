{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries disponibles : </h1>
    <div class="row">
    {% for program in programs %}
            <div class="col-md-4" >
                <img class="card-img-top"src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="card-body">
                    <a href="{{ path('wild_show',{"slug" : program.title | lower | replace({" " : "-"})}) }}">
                    <h2 class="">{{ loop.index }} - {{ program.title }}</h2>
                    <h5>Catégorie : {{ program.category.name }}</h5>
                    <p>{{ program.summary }}</p>
                    </a>
                </div>
            </div>

    {% else %}
        Aucune série trouvée.

    {% endfor %}
    </div>


