{% extends 'base.html.twig' %}

{% block title %}Ajouter une categorie{% endblock %}

{% block body %}
    <h1>Ajouter une catégorie : </h1>
    <div class="formcategory">
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_widget(form) }}
            </div>
            <div class="col">
                {{ form_row(form) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}