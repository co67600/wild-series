{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('program_new') }}">Créer nouveau</a>
    {%endif%}

    <table class="table">
        <thead>
            <tr>
                <th style="width: 1%">Id</th>
                <th style="width: 4%">Slug</th>
                <th style="width: 5%">Title</th>
                <th style="width: 40%">Summary</th>
                <th style="width: 10%">Poster</th>
                <th style="width: 15%">Actors</th>
                <th style="width: 15%">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.slug }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td><img src="{{ program.poster }}" style="width: 40%"></td>
                <td >
                {% for actor in program.actors %}
                    {{ actor.name }},
                {% else %}
                    Aucun acteur pour cette série
                {% endfor %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('program_show', {'slug': program.slug}) }}">Show</a>
                    <br>
                    <br>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-primary" href="{{ path('program_edit', {'slug': program.slug}) }}">Edit</a>
                    {%endif%}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('program_new') }}">Créer nouveau</a>
    {%endif%}

{% endblock %}
