{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('program_new') }}">Créer nouveau</a>
    {%endif%}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.slug }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('program_show', {'slug': program.slug}) }}">Show</a>
                    <br>
                    <br>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-primary" href="{{ path('program_edit', {'slug': program.slug}) }}">Edit</a>
                    {%endif%}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('program_new') }}">Créer nouveau</a>
    {%endif%}

{% endblock %}
