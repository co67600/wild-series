{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
            <tr>
                <th>Acteurs</th>
                <td>
                    {% for actor in program.actors %}
                        <a href="{{path('actor_show',{'slug': actor.slug })}}">{{actor.name}}</a>
                    {% else %}
                        Aucun acteur pour cette s√©rie
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('program_edit', {'slug': program.slug}) }}">Edit</a>
    <br> <br>

    {{ include('program/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('program_index') }}">back to list</a>
    <br>
{% endblock %}
