{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
    <h1>Episode index</h1>

    <a class="btn btn-primary"  href="{{ path('episode_new') }}">Créer nouveau</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.slug }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('episode_show', {'slug': episode.slug}) }}">Show</a>
                    <a class="btn btn-primary"  href="{{ path('episode_edit', {'slug': episode.slug}) }}">Edit</a>
                    <a class="btn btn-primary"  href="{{ path('episode_delete', {'slug': episode.slug}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary"  href="{{ path('episode_new') }}">Créer nouveau</a>
{% endblock %}
