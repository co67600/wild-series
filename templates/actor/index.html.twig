{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('actor_new') }}">Créer nouveau</a>
    {%endif%}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.slug }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('actor_show', {'slug': actor.slug}) }}">show</a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-primary" href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
                    {%endif%}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-primary"  href="{{ path('actor_new') }}">Créer nouveau</a>
    {%endif%}


{% endblock %}
